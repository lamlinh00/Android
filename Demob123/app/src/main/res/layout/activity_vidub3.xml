<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- Nó vẫn còn lỗi phần đầu. về sửa đi nhé.-->
    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="265dp"
            android:layout_height="280dp"
            android:src="@color/purple_500"/>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="280dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Noi dung 1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Noi dung 2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Noi dung 3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/black"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/ln1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/material_dynamic_tertiary0"
            android:text="Noidung 1"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/teal_200"
            android:text="Noidung 2"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/teal_700"
            android:text="Noidung 3"
            android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>